{
    "openapi": "3.0.0",
    "info": {
        "title": "SkillFundz API",
        "description": "API documentation for SkillFundz platform - connecting entrepreneurs with sponsors",
        "contact": {
            "email": "support@skillfundz.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://newapp.test",
            "description": "SkillFundz API Server"
        }
